<div class="container">
  <h1 class="row"><%= Spree.t(:editing_bridal_registry) %></h1>
  <%= form_for @bridal_registry do |f| %>
    <p><%= f.label :name, Spree.t(:name) %>:&nbsp;<%= f.text_field :name %></p>
    <p><%= f.check_box :is_private %>&nbsp;<%= f.label :is_private, Spree.t(:is_private) %></p>
    <p><%= f.check_box :is_default %>&nbsp;<%= f.label :is_default, Spree.t(:is_default) %></p>
    <%= f.submit Spree.t(:update) %>
    <%= Spree.t(:or) %>
    <%= link_to Spree.t(:delete_bridal_registry), @bridal_registry, method: :delete, data: { confirm: 'Are you sure you want to delete this registry?' }, class: 'button' %>
  <% end -%>
</div>
